generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model users {
  id               Int        @id @default(autoincrement())
  email            String     @unique
  name             String
  password         String
  role             Role       @default(ADMIN)
  assignedProjects projects[] @relation("AssignedProjects")
}

model projects {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  status      String  @default("Open")
  imageUrl    String?
  assignToId  Int?
  assignTo    users?  @relation("AssignedProjects", fields: [assignToId], references: [id], onDelete: SetNull)
  tasks       tasks[]
}

model tasks {
  id        Int      @id @default(autoincrement())
  title     String
  status    String   @default("Open")
  projectId Int
  project   projects @relation(fields: [projectId], references: [id], onDelete: Cascade)
}
